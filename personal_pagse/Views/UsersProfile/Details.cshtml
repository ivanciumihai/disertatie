@model User

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>User</h4>
    <hr/>
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            Registration Date
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Reg_date)
        </dd>

        <dt>
            Father Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FatherName)
        </dd>

        <dt>
            Group Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.GroupNumber)
        </dd>

        <dt>
            Departament
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Departament.Name)
        </dd>

        <dt>
            Educational Form
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Education_Form.name)
        </dd>

        <dt>
            Faculty
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Faculty.Name)
        </dd>

        <dt>
            University
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Faculty.University.Name)
        </dd>
        <dt>
            Role
        </dt>

        <dd>
            @Html.DisplayFor(model => model.AspNetRole.Name)
        </dd>

    </dl>
</div>
@if (User.IsInRole("Admin") || User.IsInRole("Secretary"))
{
    <p>
        @Html.ActionLink("Edit", "Edit", new {id = Model.UserId}) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
else if (User.IsInRole("Teacher"))
{
    <p>
        @Html.ActionLink("Back to List", "Index")
    </p>
}