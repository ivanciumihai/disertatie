@model ClassBook

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>
<table>
    <tr>
        <td>
            <div>
                <img src="~/Img/@Model.User.ImagePath" width="250" height="220" alt="" />
            </div>
            <br />
            <p>
                @Html.ActionLink("Edit", "Edit", new { id = Model.ClassBookId }) |
                @Html.ActionLink("Back to List", "Index")
            </p>
        </td>
        <td>
            <div>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        Student First Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.FirstName)
                    </dd>

                    <dt>
                        Student Last Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.LastName)
                    </dd>

                    <dt>
                        University Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.Faculty.University.Name)
                    </dd>

                    <dt>
                        Faculty Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.User.Faculty.Name)
                    </dd>

                    <dt>
                        Course Name
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Course.Name)
                    </dd>

                    <dt>
                        Grade Put By
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.TeacherId)
                    </dd>
                    <dt>
                        Grade Date
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Grade_Date)
                    </dd>

                    <dt>
                        Grade Modified
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Grade_modified)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Grade)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Grade)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Promoted)
                    </dt>

                    <dd>
                        @if (Model.Promoted == true)
                        {
                            <button type="button" class="btn btn-success">Promoted</button>
                        }
                        else
                        {
                            <button type="button" class="btn btn-danger">Failed</button>
                        }
                    </dd>
                </dl>
            </div>
        </td>
    </tr>
</table>