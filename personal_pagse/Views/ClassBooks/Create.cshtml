@model ClassBook

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @Html.ValidationMessage(string.Empty)
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>ClassBook</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("University", new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("UniversityId", (SelectList)ViewBag.UniversityId, " ", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Faculty", new { @class = "control-label col-md-2", id = "FacultyLabel", visibilty = "false" })
            <div class="col-md-10">
                @Html.DropDownList("FacultyId", (SelectList)ViewBag.FacultyId, " ", new { @class = "form-control", visibilty = "false" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Departament", new { @class = "control-label col-md-2", id = "DepartamentLabel" })
            <div class="col-md-10">
                @Html.DropDownList("DepId", (SelectList)ViewBag.DepId, " ", new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Course", new { @class = "control-label col-md-2", id = "CourseLabel" })
            <div class="col-md-10">
                @Html.DropDownList("CourseId", (SelectList)ViewBag.CourseId, " ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.CourseId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Student Name", new { @class = "control-label col-md-2", id = "StudentLabel" })
            <div class="col-md-10">
                @Html.DropDownList("StudentId", (SelectList)ViewBag.StudentId, " ", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StudentId, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.Grade, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Grade, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01", onkeypress = "ValidateNumber(event);" } })
                @Html.ValidationMessageFor(model => model.Grade, "", new { @class = "text-danger" })

            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" id="CreateButton" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/regex.js"></script>
    <script type="text/javascript" src="~/Scripts/classbook.js"></script>
}